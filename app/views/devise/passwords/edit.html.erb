<div class="container col-md-4 col-md-offset-4">
  <div class="panel panel-default">

      <div class="panel-heading">
        <h2>Cambia tu contrase単a</h2>
      </div>

      <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token, class: "form-control"  %>

        <div class="form-group">
          <%= f.label :password, "Nueva contrase単a" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirma tu nueva contrase単a" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.submit "Cambiar mi contrase単a", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
